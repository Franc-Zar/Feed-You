<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".settings.account.AccountActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ToolbarTheme"
        app:menu="@menu/top_bar"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_baseline_arrow_back_24"
        app:title="Feed You"
        app:titleCentered="true"
        app:titleTextAppearance="@style/TextAppearance.AppCompat.Body2"
        app:titleTextColor="#248B9C"
        tools:layout_editor_absoluteX="1dp" />

    <TextView
        android:id="@+id/decoration_password_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:fontFamily="@font/quicksand_bold"
        android:text="Account"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_account" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="638dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/decoration_password_reset"
        tools:layout_editor_absoluteX="147dp">

        <TextView
            android:id="@+id/name_decoration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_baseline_person_24"
            android:drawablePadding="10dp"
            android:padding="10dp"
            android:paddingStart="20dp"
            android:text="Name"
            android:textColor="#35424A"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/account_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/asap"
            android:padding="10dp"
            android:paddingStart="20dp"
            android:text="Example Example"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/email_decoration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_baseline_email_18"
            android:drawablePadding="10dp"
            android:fontFamily="@font/asap"
            android:padding="10dp"
            android:paddingStart="20dp"
            android:text="Email"
            android:textColor="#35424A"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/account_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/asap"
            android:padding="10dp"
            android:paddingStart="20dp"
            android:text="example@example.com"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <TextView
            android:id="@+id/language"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:drawableStart="@drawable/ic_baseline_language_24"
            android:drawablePadding="10dp"
            android:fontFamily="@font/asap"
            android:padding="10dp"
            android:paddingStart="20dp"
            android:text="Change Language"
            android:textColor="#35424A"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinner_languages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#248B9C"
            android:entries="@array/langs"
            android:padding="10dp"
            android:paddingStart="240dp" />

        <TextView
            android:id="@+id/connect_socials"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:drawableStart="@drawable/ic_baseline_person_add_24"
            android:drawablePadding="10dp"
            android:fontFamily="@font/asap"
            android:padding="10dp"
            android:paddingStart="20dp"
            android:text="Connect Social Profiles"
            android:textColor="#35424A"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/twitter_connect"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#1da1f2"
            android:drawableLeft="@drawable/ic_icons8_twitter"
            android:fontFamily="@font/asap"
            android:text="Twitter"
            android:textAllCaps="false"
            android:textStyle="normal" />

        <Button
            android:id="@+id/google_connect"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#3C3F41"
            android:drawableLeft="@drawable/ic_icons8_google"
            android:gravity="center"
            android:text="Google"
            android:textAllCaps="false"
            app:iconTint="@null" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/password_reset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:drawableStart="@drawable/ic_baseline_vpn_key_24"
            android:drawablePadding="10dp"
            android:focusable="true"
            android:fontFamily="@font/asap"
            android:padding="10dp"
            android:paddingStart="20dp"
            android:text="Password Reset"
            android:textColor="#35424A"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/delete_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:drawableLeft="@drawable/ic_baseline_delete_forever_24"
            android:drawablePadding="10dp"
            android:fontFamily="@font/asap"
            android:padding="10dp"
            android:paddingStart="20dp"
            android:text="@string/deleteAccount"
            android:textColor="@color/red"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>