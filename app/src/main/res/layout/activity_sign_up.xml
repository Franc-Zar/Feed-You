<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">

    <EditText
        android:id="@+id/email"
        android:layout_width="0dp"
        android:layout_height="43dp"
        android:layout_marginStart="75dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="75dp"
        android:layout_marginBottom="5dp"
        android:backgroundTint="#248B9C"
        android:drawableStart="@drawable/ic_baseline_email_18"
        android:ems="10"
        android:fontFamily="@font/asap"
        android:hint=" Email"
        android:inputType="textEmailAddress"
        android:textAlignment="textStart"
        app:layout_constraintBottom_toTopOf="@+id/password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/decoration_welcome" />

    <EditText
        android:id="@+id/password"
        android:layout_width="0dp"
        android:layout_height="43dp"
        android:layout_marginStart="75dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="75dp"
        android:backgroundTint="#248B9C"
        android:drawableStart="@drawable/ic_baseline_vpn_key_18"
        android:drawableEnd="@drawable/ic_baseline_visibility_18"
        android:ems="10"
        android:fontFamily="@font/asap"
        android:hint=" Password"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/country_list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email" />

    <Button
        android:id="@+id/continue_sign_up"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="75dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="75dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#00C8F8"
        android:text="continue"
        app:layout_constraintBottom_toTopOf="@+id/have_an_account"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/termini_condizioni"
        app:strokeColor="#00C8F8" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="113dp"
        android:layout_height="115dp"
        android:layout_marginTop="44dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/decoration_signIn"
        android:layout_width="95dp"
        android:layout_height="36dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/quicksand_bold"
        android:text="Sign Up"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/decoration_welcome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.237"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/app_name"
        app:layout_constraintVertical_bias="0.437" />

    <TextView
        android:id="@+id/app_name"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginStart="155dp"
        android:layout_marginEnd="155dp"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/rock_salt"
        android:text="Feed You"
        android:textColor="#248B9C"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/decoration_welcome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/decoration_welcome"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_marginStart="75dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="75dp"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/asap"
        android:text="Hi there! First time here?"
        android:textColor="#989EB1"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/decoration_signIn" />

    <ProgressBar
        android:id="@+id/account_creation_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="262dp"
        android:layout_height="25dp"
        android:layout_marginStart="75dp"
        android:layout_marginEnd="75dp"
        android:layout_marginBottom="100dp"
        android:progress="50"
        android:progressTint="#248B9C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/have_an_account"
        app:layout_constraintVertical_bias="1.0" />

    <CheckedTextView
        android:id="@+id/termini_condizioni"
        android:layout_width="253dp"
        android:layout_height="37dp"
        android:layout_marginStart="75dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="75dp"
        android:checkMarkTint="#248B9C"
        android:checked="false"
        android:text="I agree to the Terms of Services and Privacy Policy."
        android:textColor="#989EB1"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/continue_sign_up"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/country_list" />

    <Spinner
        android:id="@+id/country_list"
        android:layout_width="259dp"
        android:layout_height="26dp"
        android:layout_marginStart="75dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="75dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#248B9C"
        app:layout_constraintBottom_toTopOf="@+id/termini_condizioni"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password" />

    <TextView
        android:id="@+id/have_an_account"
        android:layout_width="147dp"
        android:layout_height="30dp"
        android:layout_marginStart="75dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/asap"
        android:text="Have an Account? "
        android:textColor="#989EB1"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/continue_sign_up" />

    <TextView
        android:id="@+id/sign_in"
        android:layout_width="56dp"
        android:layout_height="30dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="75dp"
        android:clickable="true"
        android:text="Sign In"
        android:textColor="#248B9C"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.714"
        app:layout_constraintStart_toEndOf="@+id/have_an_account"
        app:layout_constraintTop_toBottomOf="@+id/continue_sign_up" />

</androidx.constraintlayout.widget.ConstraintLayout>