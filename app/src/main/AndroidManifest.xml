<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.app1">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.App1"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".SingleFeedActivity"
            android:exported="false" />
        <activity
            android:name=".BlockActivity"
            android:exported="false" />
        <activity
            android:name=".settings.account.AccountActivity"
            android:exported="false" />
        <activity
            android:name=".settings.menu.AboutActivity"
            android:exported="false" />
        <activity
            android:name=".settings.account.PasswordChangeActivity"
            android:exported="false" />
        <activity
            android:name=".settings.menu.MenuActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="example.com"
                    android:scheme="https" />
            </intent-filter>
        </activity>
        <activity
            android:name=".authentication.AnonymousActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.Translucent" />
        <activity
            android:name=".authentication.SimpleSignInActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.Translucent" />
        <activity
            android:name=".authentication.TwitterActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.Translucent" />
        <activity
            android:name=".authentication.GoogleActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.Translucent" />
        <activity
            android:name=".authentication.PasswordRecoveryActivity"
            android:exported="false"
            android:theme="@style/Theme.App1.NoActionBar" />
        <activity
            android:name=".authentication.SignUpActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:theme="@style/Theme.App1.NoActionBar" />
        <activity
            android:name=".PreferenceActivity"
            android:exported="false" />
        <activity
            android:name=".NewsActivity"
            android:exported="false"
            android:label="@string/title_activity_news"
            android:theme="@style/Theme.App1.NoActionBar" />
        <activity
            android:name=".ErrorActivity"
            android:exported="false" />
        <activity
            android:name=".authentication.LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.App1.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>