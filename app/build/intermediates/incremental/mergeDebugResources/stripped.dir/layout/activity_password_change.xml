<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".settings.PasswordChangeActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar_password_change"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ToolbarTheme"
        app:menu="@menu/top_bar"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_baseline_arrow_back_24"
        app:title="Feed You"
        app:titleCentered="true"
        app:titleTextAppearance="@style/TextAppearance.AppCompat.Body2"
        app:titleTextColor="#248B9C"
        tools:layout_editor_absoluteX="1dp" />

    <TextView
        android:id="@+id/decoration_password_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:fontFamily="@font/quicksand_bold"
        android:text="Password Reset"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_password_change" />

    <EditText
        android:id="@+id/new_password"
        android:layout_width="0dp"
        android:layout_height="43dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="45dp"
        android:backgroundTint="#248B9C"
        android:drawableStart="@drawable/ic_baseline_vpn_key_18"
        android:drawablePadding="10dp"
        android:ems="10"
        android:fontFamily="@font/asap"
        android:hint="New Password"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/old_password"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="#248B9C" />

    <EditText
        android:id="@+id/old_password"
        android:layout_width="0dp"
        android:layout_height="43dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="45dp"
        android:backgroundTint="#248B9C"
        android:drawableStart="@drawable/ic_baseline_vpn_key_18"
        android:drawablePadding="10dp"
        android:ems="10"
        android:fontFamily="@font/asap"
        android:hint="Old Password"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="#248B9C" />

    <EditText
        android:id="@+id/confirm_password"
        android:layout_width="0dp"
        android:layout_height="43dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="45dp"
        android:backgroundTint="#248B9C"
        android:drawableStart="@drawable/ic_baseline_vpn_key_18"
        android:drawablePadding="10dp"
        android:ems="10"
        android:fontFamily="@font/asap"
        android:hint="Confirm New Password"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/new_password"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="#248B9C" />

    <Button
        android:id="@+id/change_password"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="45dp"
        android:backgroundTint="#00C8F8"
        android:text="Change Password"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirm_password"
        app:layout_constraintVertical_bias="0.026"
        app:strokeColor="#00C8F8" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="313dp"
        android:layout_height="76dp"
        android:layout_marginStart="51dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="47dp"
        android:fontFamily="@font/asap"
        android:foregroundGravity="center"
        android:text="@string/newPasswordHint"
        android:textColor="#989EB1"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/decoration_password_reset" />

</androidx.constraintlayout.widget.ConstraintLayout>